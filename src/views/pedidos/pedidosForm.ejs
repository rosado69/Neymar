<%- include('../partials/header') %>

    <%- include('../partials/menu') %>
        <div class="container mt-5">
            <h2>Registrar Pedido</h2>
            <form action="/pedidos" method="POST">
                <div class="mb-3">
                    <label for="produto_id" class="form-label">Produto</label>
                    <select class="form-select" id="produto_id" name="produto_id" required>
                        <option selected>Escolha um produto...</option>
                        <% produtos.forEach(produto=> { %>
                            <option value="<%= produto.id %>">
                                <%= produto.nome %> (Estoque: <%= produto.quantidade_de_estoque %>)
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="quantidade" class="form-label">Quantidade</label>
                    <input type="number" class="form-control" id="quantidade" name="quantidade" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Tipo de Operação</label>
                    <div>
                        <input type="radio" id="entrada" name="tipo" value="entrada" required>
                        <label for="entrada">Entrada</label>
                    </div>
                    <div>
                        <input type="radio" id="saida" name="tipo" value="saida">
                        <label for="saida">Saída</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="cliente_fornecedor_id" class="form-label">Cliente</label>
                    <select class="form-select" id="cliente_fornecedor_id" name="cliente_fornecedor_id" required>
                        <option selected>Escolha um cliente/fornecedor...</option>
                        <% clientes_fornecedores.forEach(cliente_fornecedor=> { %>
                            <option value="<%= cliente_fornecedor.id %>">
                                <%= cliente_fornecedor.nome %> (CPF/CNPJ: <%= cliente_fornecedor.cpf_cnpj %>)
                            </option>
                            <% }); %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Registrar Pedido</button>
            </form>
        </div>
        <%- include('../partials/footer') %>